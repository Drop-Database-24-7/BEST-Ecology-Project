{
  "manifest_version": 3,
  "name": "Leaf Guard",
  "version": "1.0",
  "description": "Pierwsza wtyczka, która w czasie rzeczywistym wykrywa ukryte produkty Fast Fashion (Shein, Temu, AliExpress itd.) na Vinted. Chronimy Cię przed greenwashingiem i przepłacaniem za plastik.",
  "icons": {
    "16": "leaf-green.png",
    "32": "leaf-green.png",
    "48": "leaf-green.png",
    "128": "leaf-green.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.vinted.pl/*",
        "*://*.vinted.com/*",
        "*://*.vinted.fr/*",
        "*://*.vinted.de/*",
        "*://*.vinted.it/*",
        "*://*.vinted.co.uk/*",
        "*://*.vinted.es/*",
        "*://*.vinted.nl/*",
        "*://*.vinted.be/*",
        "*://*.vinted.pt/*",
        "*://*.vinted.at/*",
        "*://*.vinted.cz/*",
        "*://*.vinted.lt/*",
        "*://*.vinted.sk/*",
        "*://*.vinted.hu/*",
        "*://*.vinted.se/*",
        "*://*.vinted.fi/*",
        "*://*.vinted.dk/*",
        "*://*.vinted.ro/*",
        "*://*.vinted.gr/*",
        "*://*.vinted.hr/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "*://*.vinted.net/*",
    "*://*.vinted.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "leaf.png"
      ],
      "matches": [
        "*://*/*"
      ]
    }
  ]
}